{
    "name": "Light",
    "page_title": "Alpine Intelligence Xcelerator",
    "logo_image": "logo.png",
    "logo_max_width": "70px",
    "logo_max_height": "70px",
    "title_bar_background": "primary",
    "title_bar_text_color": "#fff",
    "page_background": "#fff",
    "chat_background": "#fff",
    "avatars": {
        "default": { "styles": { "position": "left", "src": "user_avatar.png"} },
        "ai": { "src": "ai_avatar.png" },
        "user": { "src": "user_avatar.png" }
    },
    "names": {
        "default": {"style": {"fontSize": "18px", "marginTop": "14px", "width": "100px"}},
        "ai": {"text": "Assistant"},
        "user": {"text": "User", "position": "left"}
    },
    "messages": {
        "styles": {
            "default": {
                "shared": {
                    "bubble": {
                    "maxWidth": "100%",
                    "backgroundColor": "unset",
                    "marginTop": "10px",
                    "marginBottom": "10px",
                    "fontSize": "1.15rem"
                    }
                },
                "user": {
                    "bubble": {
                    "marginLeft": "0px",
                    "color": "black"
                    }
                },
                "ai": {
                    "outerContainer": {
                    "backgroundColor": "rgba(247,247,248)",
                    "borderTop": "1px solid rgba(0,0,0,.1)",
                    "borderBottom": "1px solid rgba(0,0,0,.1)"
                    }
                }
            }
        }
    },
    "input_box": { "fontSize": "1.15rem", "margin-bottom": "10px" },
    "textInput":{
        "styles": {
            "text": {"color": "black"},
            "container": {"maxHeight": "50px", "backgroundColor": "white"},
            "focus": {"border": "1px solid #aaa"}
        },
        "placeholder": {"text": "Ask me anything...", "style": {"color": "#bbb"}},
        "characterLimit": 2000
    },
    "status_bar": {
        "enabled": true,
        "background": "primary",
        "text_color": "#fff",
        "sections": {
            "url": true,
            "chat_state": true,
            "token_count": true,
            "model_version": false,
            "streaming": false,
            "tokenize": false,
            "themes": true
        }
    }
}